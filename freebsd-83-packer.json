{
  "builders": [{
    "type": "virtualbox",
    "guest_os_type": "FreeBSD_64",
    "iso_url": "http://ftp.freebsd.org/pub/FreeBSD/releases/amd64/ISO-IMAGES/8.3/FreeBSD-8.3-RELEASE-amd64-disc1.iso",
    "iso_checksum": "cf4edae9692f560e9cab89c8347886f5",
    "iso_checksum_type": "md5",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "30s",
    "shutdown_command": "sudo halt -p",
    "boot_wait": "5s",
    "boot_command": [
      "<enter>", 
      "<wait10>",
      "<enter>",
      "s<enter>",
      "<enter>", 
      "<enter>",
      "<enter>",
      "aq",
      "<enter>",
      "<enter>",
      "aq",
      "x<enter>",
      "<enter>",
      "<enter>",
      "<wait10><wait10><wait5><wait>",
      "<enter>",
      "<enter>",
      "<enter>",
      "y",
      "<wait5>",
      "vagrant-freebsd-83<tab><tab><tab><tab><tab><tab><tab><enter>",
      "<enter>",
      "<enter>",
      "y",
      "<enter>",
      "<enter>",
      "<enter>",
      "<enter>",
      "n",
      "n",
      "n",
      "y",
      "u",
      "<enter>",
      "vagrant<tab><tab><tab>vagrant<tab>vagrant<tab><tab>wheel<tab><tab><tab><enter>",
      "x<enter>",
      "<enter>",
      "vagrant<enter>vagrant<enter>",
      "n",
      "x",
      "y",
      "<enter>",
      "<wait10><wait5>",
      "<enter>",
      "<wait10><wait><wait>",
      "root<enter>vagrant<enter>",
      "echo 'nameserver 8.8.8.8' > /etc/resolv.conf<enter>",
      "pkg_add -r sudo<enter>",
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait5>",
      "sed -i -e 's/\\# \\%wheel ALL=(ALL) NOPASSWD/\\%wheel ALL=(ALL) NOPASSWD/g' /usr/local/etc/sudoers<enter>",
      "pkg_add -r bash<enter>",
      "<wait10><wait10><wait10><wait5>",
      "su - vagrant<enter>",
      "chsh -s /usr/local/bin/bash<enter>vagrant<enter>",
      "exit<enter>",
      "echo 'vboxguest_enable=\"YES\"' >> /etc/rc.conf<enter>",
      "echo 'vboxservice_enable=\"YES\"' >> /etc/rc.conf<enter>",
      "exit<enter>"
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo sed -i -e 's/\\# Defaults     env_keep += \"PKG/Defaults     env_keep += \"PKG/g' /usr/local/etc/sudoers",
      "fetch https://raw.github.com/mitchellh/vagrant/master/keys/vagrant.pub",
      "mkdir .ssh",
      "mv vagrant.pub .ssh/authorized_keys",
      "sudo pkg_add -r virtualbox-ose-additions",
      "rm VBoxGuestAdditions.iso"
    ]
  }],
  "post-processors": ["vagrant"]
}
